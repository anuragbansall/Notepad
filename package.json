{
  "name": "notepad-text-editor",
  "version": "1.0.0",
  "description": "A modern, feature-rich text editor built with Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "watch": "nodemon --exec npx electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist"
  },
  "keywords": ["text-editor", "notepad", "electron", "editor"],
  "author": "Your Name",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.notepad.texteditor",
    "productName": "Notepad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png"
    }
  }
}
